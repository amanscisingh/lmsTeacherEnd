            color: white;
            border-radius: 10%;
            align-items: center;
        }

        #openProfile{
            height: 30px; 
            display:none;
            position: absolute;
            top: 11%;
            right: 8%;
            width: 80px;
            background-color: rgba(0, 0, 0, 0.562);
            color: white;
            border-radius: 10%;
            align-items: center;
            padding: 2px;
        }

        #logoutDone{
            height: 30px; 
            display:none;
            position: absolute;
            top: 11%;
            right: 1.5%;
            width: 80px;
            background-color: rgba(0, 0, 0, 0.562);
