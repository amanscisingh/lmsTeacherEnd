</head>
<body>
    <div class="header">

        <div class="container">            
            <span class="container-span" style="width:15%;">
                <img src="http://old.iitbhu.ac.in/icmc2018/apm/images/IITBHU-Logo.jpg" alt="iit_bhu_logo" style="height: 60px; width: 60px;"/>
                <h3 style="padding-left: 5%; padding-top:10%;">IIT-BHU</h3>
            </span>
            <span style="width: 65%;">

            </span>
            
            <span class="container-span" style="width:21.4%;">
                <a href="#" id="createAssignment" class="container-element">
                    <img src="/images/assignmentDesign.svg" name="submit" style="height: 100%; width: 100%;" alt="plus"/>
                </a>
                    <div style="text-align: center; padding: 2px;" id="joinClass">Create Class</div>
                <a id='scheduleClass' href="#" class="container-element"><img style="height: 100%; width: 100%;" src="/images/classScheduleDesign.svg">  </a>
                <div style="text-align: center; padding: 2px;" id="openProfile">Schedule Class</div>
                <a id="logoutBtn" href="#" onclick="signOut()" class="container-element"><img style="height: 100%; width: 100%;" src="/images/logoutDesign.svg">  </a>
                <div style="text-align: center; padding: 2px;" id="logoutDone">Logout</div>
            </span>
            
        </div>

    </div>


    <script src="https://apis.google.com/js/platform.js" async defer> </script>
    

    <script>
        const createAssignment = document.getElementById('createAssignment');
        const scheduleClass = document.getElementById('scheduleClass');
        createAssignment.href = location.pathname + '/create';
        scheduleClass.href = location.pathname + '/scheduleClass';

        function signOut(user) {
            console.log('btn');
            window.gapi.load('auth2', () => {
        window.gapi.auth2
            .init({
            client_id:
                '665729303262-pvgu50j2sjrbafq2jjibo4t08qmha2pr.apps.googleusercontent.com'
            })
            .then(() => {
            window.gapi.auth2
                .getAuthInstance()
                .signOut()
                .then(function() {
                console.log('User signed out.');
                location.assign('/');
                });
            });
        });
        }

        document.getElementById("createAssignment").addEventListener("mouseover", function(e) {
            document.getElementById("joinClass").style.display="flex";
            document.getElementById("joinClass").style.justifyContent="center";
        });
        document.getElementById("createAssignment").addEventListener("mouseout", function() {
            document.getElementById("joinClass").style.display="none";
        });

        document.getElementById("scheduleClass").addEventListener("mouseover", function(e) {
            document.getElementById("openProfile").style.display="flex";
            document.getElementById("openProfile").style.justifyContent="center";
        });
        document.getElementById("scheduleClass").addEventListener("mouseout", function() {
            document.getElementById("openProfile").style.display="none";
        });

        document.getElementById("logoutBtn").addEventListener("mouseover", function(e) {
            document.getElementById("logoutDone").style.display="flex";
            document.getElementById("logoutDone").style.justifyContent="center";
        });
        document.getElementById("logoutBtn").addEventListener("mouseout", function() {
            document.getElementById("logoutDone").style.display="none";
        });
    </script>


